<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_edit_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.EditFragment">

    <TextView
        android:id="@+id/id_tv_city_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/city_code"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
        android:id="@+id/id_np_city_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/id_tv_city_code"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_city_code" />

    <TextView
        android:id="@+id/id_tv_race_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/race_code"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintStart_toEndOf="@+id/id_tv_city_code"
        app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
        android:id="@+id/id_np_race_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/id_tv_race_code"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_race_code" />

    <TextView
        android:id="@+id/id_tv_race_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/race_no"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintStart_toEndOf="@+id/id_tv_race_code"
        app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
        android:id="@+id/id_np_race_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/id_tv_race_num"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_race_num" />

    <TextView
        android:id="@+id/id_tv_race_sel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/race_sel"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintStart_toEndOf="@+id/id_tv_race_num"
        app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
        android:id="@+id/id_np_race_sel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/id_tv_race_sel"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_race_sel" />

    <Button
        android:id="@+id/id_btn_time"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="112dp"
        android:drawableStart="@drawable/ic_clock_outline"
        android:padding="8dp"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />
        <!--TODO android:contentDescription="" />-->

    <Button
        android:id="@+id/id_btn_save"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="64dp"
        android:text="@string/lbl_save"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/id_btn_multi_sel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/lbl_multi_select"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <TextView
        android:id="@+id/id_tv_multi_sel0"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/id_btn_multi_sel"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <TextView
        android:id="@+id/id_tv_multi_sel1"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/id_tv_multi_sel0"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <TextView
        android:id="@+id/id_tv_multi_sel2"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/id_tv_multi_sel1"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <TextView
        android:id="@+id/id_tv_multi_sel3"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/id_tv_multi_sel2"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="224dp" />

    <TextView
        android:id="@+id/id_tv_selects_label"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:text="@string/lbl_selections"
        app:layout_constraintBottom_toBottomOf="@+id/id_btn_multi_sel"
        app:layout_constraintEnd_toEndOf="@+id/id_tv_multi_sel3"
        app:layout_constraintStart_toStartOf="@+id/id_tv_multi_sel0"
        android:textAppearance="@android:style/TextAppearance.Material.Small"/>

</androidx.constraintlayout.widget.ConstraintLayout>