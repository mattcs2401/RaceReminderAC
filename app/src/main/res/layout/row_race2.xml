<?xml version="1.0" encoding="utf-8"?>
<mcssoft.com.racereminderac.utility.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:layout_gravity="center_vertical"
    app:dragFromEdge="right">

    <!-- This is the reveal layout and must be first. -->
    <!-- TODO - a different layout. -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/info_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_delete"
                android:text="Delete"/>

            <ImageButton
                android:id="@+id/edit_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_edit"
                android:text="Edit"/>

        </LinearLayout>
    </FrameLayout>

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:focusable="true"
        android:clickable="true"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="B"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/id_tv_city_code"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp" />

            <TextView
                android:text="R"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/id_tv_race_code"
                app:layout_constraintLeft_toRightOf="@+id/id_tv_city_code"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp" />

            <TextView
                android:text="8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/id_tv_race_no"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toRightOf="@+id/id_tv_race_code"
                app:layout_constraintTop_toTopOf="parent"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                app:layout_constraintBaseline_toBaselineOf="@+id/id_tv_race_sel"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp" />

            <TextView
                android:text="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_tv_race_sel"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toRightOf="@+id/id_tv_race_no"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp" />

            <TextView
                android:text="23:59"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/id_tv_race_time"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toRightOf="@+id/id_tv_race_sel"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toRightOf="@+id/id_tv_race_time"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical|center_horizontal" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</mcssoft.com.racereminderac.utility.SwipeLayout>