<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="192dp"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/cc_title"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/id_cc_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="48dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/id_cc_top_guideline">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/id_btn_cc_A"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/cc_A" />

            <Button
                android:id="@+id/id_btn_cc_B"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/cc_B" />

            <Button
                android:id="@+id/id_btn_cc_C"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/cc_C" />

            <Button
                android:id="@+id/id_btn_cc_D"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/cc_D" />

            <Button
                android:id="@+id/id_btn_cc_E"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/cc_E" />

            <Button
                android:id="@+id/id_btn_cc_F"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/cc_F" />

            <Button
                android:id="@+id/id_btn_cc_I"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/cc_I" />

            <Button
                android:id="@+id/id_btn_cc_L"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/cc_L" />

            <Button
                android:id="@+id/id_btn_cc_M"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/cc_M" />

            <Button
                android:id="@+id/id_btn_cc_N"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/cc_N" />

            <Button
                android:id="@+id/id_btn_cc_O"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/cc_O" />

            <Button
                android:id="@+id/id_btn_cc_P"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/cc_P" />

            <Button
                android:id="@+id/id_btn_cc_Q"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/cc_Q" />

            <Button
                android:id="@+id/id_btn_cc_S"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/cc_S" />

            <Button
                android:id="@+id/id_btn_cc_T"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/cc_T" />

            <Button
                android:id="@+id/id_btn_cc_V"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/cc_V" />

            <Button
                android:id="@+id/id_btn_cc_X"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/cc_X" />

            <Button
                android:id="@+id/id_btn_cc_Z"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/cc_Z" />

        </LinearLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/id_cc_2nd_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="320dp" />

    <Button
        android:id="@+id/id_btn_cc_cancel"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/lbl_cancel"
        app:layout_constraintBottom_toTopOf="@+id/id_cc_bottom_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/id_cc_2nd_guideline" />

    <Button
        android:id="@+id/id_btn_cc_ok"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/lbl_ok"
        app:layout_constraintBottom_toTopOf="@+id/id_cc_bottom_guideline"
        app:layout_constraintStart_toEndOf="@+id/id_btn_cc_cancel"
        app:layout_constraintTop_toTopOf="@+id/id_cc_2nd_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/id_cc_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="400dp" />

</androidx.constraintlayout.widget.ConstraintLayout>