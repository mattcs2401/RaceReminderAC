<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="@string/key_defaults"
        app:title="@string/defaults_title">

        <ListPreference
            app:key="@string/key_race_code_pref"
            app:title="@string/race_code_pref_title"
            app:summary="@string/race_code_pref_summary"
            app:entries="@array/raceCodes"
            app:entryValues="@array/raceCodesVals" />

        <ListPreference
            app:key="@string/key_city_code_pref"
            app:title="@string/city_code_pref_title"
            app:summary="@string/city_code_pref_summary"
            app:entries="@array/cityCodes"
            app:entryValues="@array/cityCodesVals" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="key_notif"
        app:title="Notification">

        <SwitchPreferenceCompat
            app:key="key_notif_send"
            app:defaultValue="false"
            app:summary="Post notifications when nearing Race time." />

        <SwitchPreferenceCompat
            app:key="key_notif_multi"
            app:enabled="false"
            app:defaultValue="false"
            app:summary="Allow multiple notifications for the same Race." />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="key_maint"
        app:title="Maintenance">

        <Preference
            app:key="key_maint_del_archived"
            app:title="Delete Archived"
            app:summary="Delete archived Race records."/>

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>